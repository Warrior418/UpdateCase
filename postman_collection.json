{
	"info": {
		"_postman_id": "123e4567-e89b-12d3-a456-426614174000",
		"name": "Distributed Storage System",
		"description": "API для системы распределенного хранения файлов",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": ["{{baseUrl}}"],
					"path": ["health"]
				},
				"description": "Проверка работоспособности системы"
			}
		},
		{
			"name": "Upload File",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "/path/to/file"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/api/v1/files",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "files"]
				},
				"description": "Загрузка файла"
			}
		},
		{
			"name": "Download File",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/files/{{fileId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "files", "{{fileId}}"]
				},
				"description": "Скачивание файла"
			}
		},
		{
			"name": "List Files",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/files",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "files"]
				},
				"description": "Список всех файлов"
			}
		},
		{
			"name": "Get File Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/files/{{fileId}}/info",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "files", "{{fileId}}", "info"]
				},
				"description": "Информация о файле"
			}
		},
		{
			"name": "Delete File",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/v1/files/{{fileId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "v1", "files", "{{fileId}}"]
				},
				"description": "Удаление файла"
			}
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"if (pm.response.code === 200) {",
					"    if (pm.request.method === 'POST' && pm.request.url.path.includes('/files')) {",
					"        var jsonData = pm.response.json();",
					"        pm.environment.set('fileId', jsonData.id);",
					"    }",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080"
		}
	]
}
